---
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';
---

<div class = "scrolling">
	<NavBar></NavBar>
	<div class = "text-fade"></div>
	<slot />
</div>

<style>
	.scrolling {
  		background-image: linear-gradient(to bottom, #808080, #000000);
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		width: 100%;
		height: 100%;
		overflow: auto;
        box-sizing: border-box; 
        padding: clamp(1.5rem, 8vw, 10rem);
	}
	.text-fade {
		display: fixed;
  		background-image: linear-gradient(
  			to top, rgba(128, 128, 128, 0.0), rgba(128, 128, 128, 1.0));
  		left: 0;
  		top: 0;
  		left: 0;
  		right: 0;
		position: fixed;
		width: 100%;
		height: clamp(5rem, 12vw, 15rem);
		overflow: hidden;
        padding: 2.5rem;
        margin: 0;
        z-index:90;
	}
</style>