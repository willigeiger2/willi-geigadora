---
import ScrollingLayout from '../layouts/ScrollingLayout.astro';
import Layout from '../layouts/Layout.astro';

const title = "Bio";
---

<Layout title={title}>
	<main>
		<ScrollingLayout>
			<slot />
		</ScrollingLayout>
	</main>
</Layout>

<style>
	main {
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		width: 100%;
		height: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: clamp(3rem, 10vh, 12vw);
	}
</style>
