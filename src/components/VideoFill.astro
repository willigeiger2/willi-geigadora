---
interface Props {
	src: string;
	type: string;
}

const { src, type } = Astro.props;

---
<video
    class="video-fill"
    autoplay
    playsinline
    muted
    loop
>
    <source src={src} type={type} />
</video>

<style>
    .video-fill {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>